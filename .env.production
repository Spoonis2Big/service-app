# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Database
DB_PATH=/var/www/service-app/data/service_orders.db

# File uploads
UPLOAD_DIR=/var/www/service-app/uploads

# CORS
CORS_ORIGIN=https://service.prengerfurniture.com

# Logging
LOG_LEVEL=info
LOG_DIR=/var/www/service-app/logs

# Security
SESSION_SECRET=your-super-secret-session-key-here-change-this

# SSL (if using HTTPS directly in Node.js)
SSL_CERT_PATH=/etc/letsencrypt/live/service.prengerfurniture.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/service.prengerfurniture.com/privkey.pem